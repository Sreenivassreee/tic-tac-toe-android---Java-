<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    tools:context=".MainActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="3"
      android:orientation="horizontal">
      <Button
          style="@style/Btn"
          tools:text="1"
          android:id="@+id/One"
          />

      <Button
          style="@style/Btn"
          tools:text="2"
          android:id="@+id/Two"
         />


   <Button
       style="@style/Btn"
       tools:text="3"
       android:id="@+id/Three"
       />

   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="3"
       android:orientation="horizontal">
      <Button
          style="@style/Btn"
          tools:text="4"
          android:id="@+id/Four"
          />

      <Button
          style="@style/Btn"
          tools:text="5"
          android:id="@+id/Five"
          />


      <Button
          style="@style/Btn"
          tools:text="6"
          android:id="@+id/Six"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="3"
       android:orientation="horizontal">
      <Button
          style="@style/Btn"
          tools:text="7"
          android:id="@+id/Seven"
          />

      <Button
          style="@style/Btn"
          tools:text="8"
          android:id="@+id/Eight"
          />


      <Button
          style="@style/Btn"
          tools:text="9"
          android:id="@+id/Nine"
          />





   </LinearLayout>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="80dp"
      android:text="Start"
      android:id="@+id/start">

   </Button>
</LinearLayout>